<% include ../partials/header %>

<div class="ui container">
    <h1>this is the item/new route</h1>
    <div class="ui segment">
        <form class="ui form" action="/onus/<%= user._id %>/collections/<%= col_id %>/items" method="POST">
            <div class="form item">
                <label for="item[name]">Name:</label>
                <input type="text" name="item[name]" placeholder="The Mona Lisa">
            </div>
            <div class="form item">
                <label for="item[description]">Add a description</label>
                <input type="text" name="item[description]" placeholder="Pairs of socks">
            </div>
            <div class="form item">
                <label for="item[purchaseDate]">When did you buy it?</label>
                <input type="text" name="item[purchaseDate]" placeholder="Pairs of socks">
            </div>
            <div class="form item">
                <label for="item[serialNumber]">Add a serial number?</label>
                <input type="text" name="item[serialNumber]" placeholder="Pairs of socks">
            </div>
            <div class="form item">
                Priority:
                <label for="item[priority]">5</label>
                <input type="radio" name="item[priority]">
                <label for="item[priority]">4</label>
                <input type="radio" name="item[priority]">
                <label for="item[priority]">3</label>
                <input type="radio" name="item[priority]">
                <label for="item[priority]">2</label>
                <input type="radio" name="item[priority]">
                <label for="item[priority]">1</label>
                <input type="radio" name="item[priority]">
            </div>
            <input type="submit">
        </form>
    </div>
</div>

<% include ../partials/footer %>